---
// このレイアウトコンポーネントが受け取るデータ（ページのタイトル）を定義
interface Props {
  title: string;
}
const { title } = Astro.props;
---

<html lang="ja">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="robots" content="none">
    <title>{title} | Rikito Takahashi - Portfolio</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Noto+Sans+JP:wght@400;500;700&display=swap" rel="stylesheet">
    
    <!-- 外部スタイルシートの読み込み -->
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <!-- プリローダー -->
    <div class="-w-preloader" id="preloader">
        <div class="-w-preloader__dot"></div>
        <div class="-w-preloader__dot"></div>
        <div class="-w-preloader__dot"></div>
    </div>

    <!-- ヘッダー -->
    <header class="-w-header" id="header">
        <div class="-w-header__logo">
            <a href="/">Rikito Takahashi</a>
        </div>
        <nav class="-w-header__nav">
            <div class="-w-header__nav-item"><a href="/#greeting">GREETING</a></div>
            <div class="-w-header__nav-item"><a href="/works/">WORKS</a></div>
            <div class="-w-header__nav-item"><a href="/#profile">PROFILE</a></div>
            <div class="-w-header__nav-item"><a href="/#contact">CONTACT</a></div>
        </nav>
        <button class="-w-bento-menu-btn" id="bento-menu-btn">
            <span></span><span></span><span></span>
            <span></span><span></span><span></span>
            <span></span><span></span><span></span>
        </button>
        <nav class="-w-mobile-nav" id="mobile-nav">
            <div class="-w-mobile-nav__item"><a href="/#greeting">GREETING</a></div>
            <div class="-w-mobile-nav__item"><a href="/works/">WORKS</a></div>
            <div class="-w-mobile-nav__item"><a href="/#profile">PROFILE</a></div>
            <div class="-w-mobile-nav__item"><a href="/#contact">CONTACT</a></div>
        </nav>
    </header>

    <main>
        <slot />
    </main>

    <!-- フッター -->
    <footer class="-w-footer" id="footer">
        <div class="-w-footer__inner">
            <nav class="-w-footer__nav">
                <a href="/#greeting">GREETING</a>
                <a href="/works/">WORKS</a>
                <a href="/#profile">PROFILE</a>
                <a href="/#contact">CONTACT</a>
            </nav>
            <p class="-w-footer__copyright">&copy; 2025 Rikito Takahashi. All Rights Reserved.</p>
        </div>
    </footer>

    <!-- TOPへ戻るボタン -->
    <button type="button" class="-w-back-to-top" id="back-to-top">
        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="m18 15-6-6-6 6"/></svg>
    </button>

    <!-- モーダル -->
    <div class="-w-modal" id="modal">
        <div class="-w-modal__content" id="modal-content"></div>
        <button class="-w-modal__close-btn" id="modal-close-btn">&times;</button>
    </div>

    <script>
        import "../scripts/main.js";
    </script>
</body>
</html>
